<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huaruiedu.contact.MainActivity" 
    android:orientation="vertical"
     android:background="@drawable/background"
    >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="2mm"
            >
              <ImageButton 
                  android:id="@+id/concat"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:src="@drawable/face3"
			android:background="@android:color/background_light"
            />
              <TextView 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="联系人"
                  android:textColor="@android:color/white"
                  />
        </LinearLayout>
        
        <LinearLayout  android:layout_marginTop="2mm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            
          <ImageButton 
              android:background="@android:color/background_light"
              android:id="@+id/jl"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/face1"
            />
              <TextView 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="通话记录"
                  android:textColor="@android:color/white"
                  />
        </LinearLayout>
        
        
        
        
        <LinearLayout  android:layout_marginTop="2mm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            
          <ImageButton 
              android:id="@+id/bh"
			android:layout_width="5mm"
			android:layout_height="5mm"
			android:src="@drawable/menu_phone"
			android:background="@android:color/background_light"
            />
              <TextView 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="拨号键盘"
                  android:textColor="@android:color/white"
                  />
        </LinearLayout>
        
          <LinearLayout  android:layout_marginTop="2mm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            
          <ImageButton 
              android:id="@+id/message"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/face4"
			android:background="@android:color/background_light"
            />
              <TextView 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="发送短信"
                  android:textColor="@android:color/white"
                  />
        </LinearLayout>
        
          
           <LinearLayout  android:layout_marginTop="2mm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            
          <ImageButton 
            android:id="@+id/add"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/menu_create"
			android:background="@android:color/background_light"
            />
              <TextView 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="新建"
                  android:textColor="@android:color/white"
                  
                  />
        </LinearLayout>
        
        
    </LinearLayout>
    
    
    
    <ListView 
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


</LinearLayout>
